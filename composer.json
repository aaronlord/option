{
    "name": "lord/option",
    "description": "Rust-esque Option for PHP",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "laravel/pint": "^1.13",
        "overtrue/phplint": "^9.0",
        "phpstan/phpstan": "^1.10"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lord\\Option\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Aaron Lord",
            "email": "hire@aaron.codes"
        }
    ],
    "scripts": {
        "pipeline": [
            "./vendor/bin/phplint",
            "./vendor/bin/pint",
            "./vendor/bin/phpstan",
            "./vendor/bin/phpunit"
        ]
    }
}
